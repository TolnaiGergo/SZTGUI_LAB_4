<Window x:Class="SZTGUI_LAB_4.FoodEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZTGUI_LAB_4"
        mc:Ignorable="d"
        Title="FoodEditor" Height="200" Width="300">
    <StackPanel Background="AliceBlue">
        <Label Content="Name:"/>
        <TextBox x:Name="nameBox" Text="{Binding Name}"/>
        <Label Content="Type: "/>
        <ComboBox x:Name="typeBox" SelectedItem="selectedType"/>
        <Label Content="Price: "/>
        <TextBox x:Name="priceBox" Text="{Binding Price}"/>
        <Button Content="Save" Click="Button_Click"/>
    </StackPanel>
</Window>
